@import '../../variables'

.blocker-block
    display none
    position absolute
    top 0
    left 0
    width 100%
    transition background-color .2s
    z-index 1
    &--block
        @media(max-width $breakpointLow)
            display block
    &--darken
        background-color rgba(0,0,0, 0.3)