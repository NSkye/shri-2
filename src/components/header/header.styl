@import '../../variables'

body.blured .header
    makeblur()

.header
    flexRow()
    position fixed
    height 92px
    width 100%
    background $brightBackground
    border-bottom 1px solid #F0F0F0
    &__mobileview
        flexRowJustify(space-between)
        align-items center
        box-sizing border-box
        min-height 62px
        padding-left 38px
        padding-right 38px
        background $brightBackground
        z-index 2
    @media(max-width $breakpoint)
        flex-direction column
        height auto
        border none 
        &__mobileview
            height auto
            padding-left 20px
            padding-right 20px
            padding-top 12px
            padding-bottom 12px