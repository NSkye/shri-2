@import '../../variables'

.main-container
    flexColumn()
    flex-wrap no-wrap
    flex 1 0 auto
    box-sizing border-box
    width 100%
    padding-top $headerHeightDesktop+10px
    overflow hidden
    .body--blured-nav &
        blurForNavigation()
    .body--blured-popup &
        blurForPopup()
    @media(max-width $breakpointLow)
        padding-top $headerHeightMobile
        padding-bottom $footerHeight
        height auto