@import '../../variables'

body.blured .summary
    makeblur()

.summary
    padding-left 40px
    @media(max-width 1364px)
        padding-left 0
    @media(max-width $breakpoint)
        padding-left 20px
        padding-right 20px
        box-sizing border-box
        width 100%
    &__heading
        @media(max-width 1364px)
            display none
    &__container
        flexRowJustify(space-between)
        position relative
        height 330px
        min-width 640px
        width 100vw
        max-width 40vw
        overflow hidden
        border-radius 22px
        background url(../../assets/bg@1x.png)
        background-repeat no-repeat
        background-size cover
        @media(max-width $breakpoint)
            flex-direction column
            justify-content flex-start
            height auto
            width 100%
            min-width 0
            max-width none
        &::before
            content ''
            position absolute
            bottom 5px
            right 110px
            height 16px
            width 16px
            background-image url(assets/double-arrow.svg)
            background-repeat no-repeat
            background-size contain
            background-position center
            z-index 4
            @media(max-width $breakpoint)
                display none
    &__core
        flexColumn()
        align-items flex-start
        width 360px
        margin-top 2.5rem
        margin-left 2.5rem
        font-family Arial, sans-serif
        font-color $activeText
    &__greeting
        width 100%
        font-weight bold
        line-height 3rem
        font-size 2.7rem
    &__status
        width 100%
        font-size 1.4rem
        line-height 1.6rem
        margin-top 6px
    &__weather
        flexRow()
        padding-top 2.5rem
        align-items flex-end
    &__temp
        flexColumn()
        font-size 3.6rem
        font-weight bold
        line-height 4.2rem
        &:nth-child(1)
            margin-right 1.8rem
        &--outside::before
            content 'За окном'
        &--inside::before
            content 'Дома'
        &--outside::before, &--inside::before
            font-size 1.4rem
            line-height 1.6rem
            color $inactiveText
            font-weight 400
    &__weather-icon
        height 4.3rem
        width 2.6rem
        &--rain
            background url(../../assets/cloud-drizzle.svg)
            background-repeat no-repeat
            background-size contain
            background-position center
            margin-left .5rem
    &__devices
        flexColumn()
        height 100%
        padding-right 10px
        width 220px
        padding-top 10px
        overflow hidden
        position relative
        &--grabbed
            cursor grabbing
        @media(max-width $breakpoint)
            flex-direction row
            padding-left 10px
            height 140px
            width 100%



