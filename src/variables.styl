$activeText = #252525
$inactiveText = #818181
$brightBackground = #ffffff
$darkenBackground = #f7f7f7
$YandexYellow = #ffd93e
$YandexRed = #FF0000

resetListStyle()
    list-style none
    padding 0
    margin 0

makeblur()
    filter blur(2px)

$breakpoint = 768px

flexRow()
    display flex
    flex-direction row

flexColumn()
    display flex
    flex-direction column

flexRowJustify(j)
    flexRow()
    justify-content j

flexColumnJustify(j)
    flexColumn()
    justify-content j

